{
  "compilerOptions": {
      "module": "commonjs",
      "esModuleInterop": true,
      "target": "es6",
      "noImplicitAny": true,
      "moduleResolution": "node",
      "types": ["reflect-metadata"],   //Inversify
      "experimentalDecorators": true,  //Inversify
      "emitDecoratorMetadata": true,   //Inversify
      "sourceMap": true,
      //"strict": true,
      "outDir": "dist",
      "baseUrl": ".",
      "paths": {
          "*": [
              "node_modules/*",
              "src/types/*"
          ]
      }
  },
  "include": [
      "src/**/*"
  ],
  "exclude": [  ]
}